# RostraCore Frontend - Production Environment Variables
# Copy this file to .env.local and fill in your production values
# DO NOT commit .env.local to version control!

###############################################################################
# API CONFIGURATION
###############################################################################

# Backend API URL - CRITICAL: Must point to your production API
NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# API timeout settings (milliseconds)
NEXT_PUBLIC_API_TIMEOUT=30000

# WebSocket URL (if using real-time features)
NEXT_PUBLIC_WS_URL=wss://api.yourdomain.com/ws

###############################################################################
# MONITORING & ERROR TRACKING (SENTRY)
###############################################################################

# Sentry DSN for frontend error tracking
# Create separate Sentry project for frontend at https://sentry.io
NEXT_PUBLIC_SENTRY_DSN=https://YOUR_FRONTEND_SENTRY_KEY@o123456.ingest.sentry.io/PROJECT_ID
NEXT_PUBLIC_SENTRY_ENVIRONMENT=production
NEXT_PUBLIC_SENTRY_RELEASE=rostracore-frontend@1.0.0

# Sentry sampling rates (0.0 to 1.0)
NEXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=0.1
NEXT_PUBLIC_SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0.1
NEXT_PUBLIC_SENTRY_REPLAYS_ON_ERROR_SAMPLE_RATE=1.0

# Sentry server-side config (not exposed to client)
SENTRY_AUTH_TOKEN=YOUR_SENTRY_AUTH_TOKEN
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-frontend-project

###############################################################################
# APPLICATION SETTINGS
###############################################################################

# Environment
NODE_ENV=production
NEXT_PUBLIC_ENVIRONMENT=production

# Application info
NEXT_PUBLIC_APP_NAME=RostraCore
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# Branding
NEXT_PUBLIC_COMPANY_NAME=Your Company Name
NEXT_PUBLIC_SUPPORT_EMAIL=support@yourdomain.com

###############################################################################
# FEATURE FLAGS
###############################################################################

# Enable/disable features
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_PREDICTIONS=true
NEXT_PUBLIC_ENABLE_DASHBOARDS=true
NEXT_PUBLIC_ENABLE_EXPORTS=true

# Experimental features
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false

###############################################################################
# UI CONFIGURATION
###############################################################################

# Dashboard settings
NEXT_PUBLIC_DASHBOARD_REFRESH_INTERVAL=120000  # 2 minutes in milliseconds
NEXT_PUBLIC_DASHBOARD_AUTO_REFRESH=true

# Pagination
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=50
NEXT_PUBLIC_MAX_PAGE_SIZE=100

# Date/Time settings
NEXT_PUBLIC_TIMEZONE=Africa/Johannesburg
NEXT_PUBLIC_DATE_FORMAT=YYYY-MM-DD
NEXT_PUBLIC_TIME_FORMAT=HH:mm

# Currency
NEXT_PUBLIC_CURRENCY=ZAR
NEXT_PUBLIC_CURRENCY_SYMBOL=R

###############################################################################
# AUTHENTICATION
###############################################################################

# Session management
NEXT_PUBLIC_SESSION_TIMEOUT=1800000  # 30 minutes in milliseconds
NEXT_PUBLIC_REMEMBER_ME_DURATION=604800000  # 7 days in milliseconds

# OAuth providers (if using third-party auth)
NEXT_PUBLIC_ENABLE_GOOGLE_AUTH=false
NEXT_PUBLIC_GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID

NEXT_PUBLIC_ENABLE_MICROSOFT_AUTH=false
NEXT_PUBLIC_MICROSOFT_CLIENT_ID=YOUR_MICROSOFT_CLIENT_ID

###############################################################################
# ANALYTICS & TRACKING (Optional)
###############################################################################

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_ENABLE_GA=false

# Mixpanel
NEXT_PUBLIC_MIXPANEL_TOKEN=YOUR_MIXPANEL_TOKEN
NEXT_PUBLIC_ENABLE_MIXPANEL=false

# Hotjar
NEXT_PUBLIC_HOTJAR_ID=YOUR_HOTJAR_ID
NEXT_PUBLIC_ENABLE_HOTJAR=false

###############################################################################
# PERFORMANCE OPTIMIZATION
###############################################################################

# Image optimization
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true
NEXT_PUBLIC_IMAGE_QUALITY=80
NEXT_PUBLIC_IMAGE_FORMATS=["webp","avif"]

# Build optimization
NEXT_TELEMETRY_DISABLED=1  # Disable Next.js telemetry in production
NEXT_PUBLIC_ENABLE_SOURCE_MAPS=false

# CDN configuration
NEXT_PUBLIC_CDN_URL=https://cdn.yourdomain.com
NEXT_PUBLIC_USE_CDN=false

###############################################################################
# API CACHING
###############################################################################

# SWR (React data fetching) configuration
NEXT_PUBLIC_SWR_REVALIDATE_ON_FOCUS=true
NEXT_PUBLIC_SWR_REVALIDATE_ON_RECONNECT=true
NEXT_PUBLIC_SWR_DEDUPE_INTERVAL=2000  # milliseconds

###############################################################################
# SECURITY
###############################################################################

# Content Security Policy
NEXT_PUBLIC_ENABLE_CSP=true

# HTTPS enforcement
NEXT_PUBLIC_FORCE_HTTPS=true

# API key (if needed for public endpoints)
NEXT_PUBLIC_API_KEY=YOUR_PUBLIC_API_KEY

###############################################################################
# DEPLOYMENT PLATFORM SPECIFIC
###############################################################################

# Vercel (if deploying to Vercel)
VERCEL_URL=yourdomain.vercel.app
VERCEL_ENV=production
VERCEL_GIT_COMMIT_SHA=

# AWS (if deploying to AWS)
AWS_REGION=af-south-1
AWS_S3_BUCKET=rostracore-static-assets

# DigitalOcean App Platform
DO_APP_NAME=rostracore
DO_APP_DOMAIN=yourdomain.com

###############################################################################
# LOCALE & INTERNATIONALIZATION
###############################################################################

# Default locale
NEXT_PUBLIC_DEFAULT_LOCALE=en-ZA
NEXT_PUBLIC_SUPPORTED_LOCALES=["en-ZA","en-US"]

# Enable i18n
NEXT_PUBLIC_ENABLE_I18N=false

###############################################################################
# CONTACT & SUPPORT
###############################################################################

# Support information
NEXT_PUBLIC_SUPPORT_EMAIL=support@yourdomain.com
NEXT_PUBLIC_SUPPORT_PHONE=+27-XX-XXX-XXXX
NEXT_PUBLIC_SUPPORT_URL=https://support.yourdomain.com

# Social media
NEXT_PUBLIC_TWITTER_HANDLE=@yourcompany
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/yourcompany

###############################################################################
# MARKETING
###############################################################################

# Landing page
NEXT_PUBLIC_SHOW_LANDING_PAGE=true
NEXT_PUBLIC_ENABLE_SIGNUP=true
NEXT_PUBLIC_FREE_TRIAL_DAYS=14

# Pricing
NEXT_PUBLIC_SHOW_PRICING=true
NEXT_PUBLIC_BASE_PRICE=497
NEXT_PUBLIC_CURRENCY=ZAR

###############################################################################
# DOCUMENTATION
###############################################################################

# Help documentation
NEXT_PUBLIC_DOCS_URL=https://docs.yourdomain.com
NEXT_PUBLIC_API_DOCS_URL=https://api.yourdomain.com/docs

###############################################################################
# WEBHOOKS (Optional)
###############################################################################

# Webhook endpoints for integrations
NEXT_PUBLIC_WEBHOOK_URL=https://api.yourdomain.com/webhooks

###############################################################################
# DEVELOPMENT (Set to false in production!)
###############################################################################

# Debug settings - IMPORTANT: All should be false in production
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_MOCK_API=false
NEXT_PUBLIC_VERBOSE_LOGGING=false
NEXT_PUBLIC_SHOW_DEV_TOOLS=false

###############################################################################
# BUILD CONFIGURATION
###############################################################################

# Next.js build settings
NEXT_PUBLIC_BUILD_ID=
NEXT_PUBLIC_BUILD_TIME=

# Image domains (for next/image component)
NEXT_PUBLIC_IMAGE_DOMAINS=["yourdomain.com","cdn.yourdomain.com"]

###############################################################################
# NOTES
###############################################################################

# 1. Variables starting with NEXT_PUBLIC_ are exposed to the browser
#    - Never put secrets in NEXT_PUBLIC_ variables
#    - These are embedded in the JavaScript bundle at build time
#
# 2. Variables without NEXT_PUBLIC_ are server-side only
#    - Safe for secrets and sensitive data
#    - Only available in Node.js environment
#
# 3. For Vercel deployment, set these in Vercel dashboard:
#    Settings â†’ Environment Variables
#
# 4. For Docker deployment, pass as environment variables:
#    docker run -e NEXT_PUBLIC_API_URL=https://api.yourdomain.com
#
# 5. Restart Next.js after changing .env.local:
#    npm run dev (development)
#    npm run build && npm start (production)
#
# 6. Never commit .env.local to git! Check .gitignore includes:
#    .env.local
#    .env*.local
#
# 7. Validate environment variables at build time in next.config.js
#
# 8. For different environments, use:
#    .env.local - Local development overrides
#    .env.development - Development defaults
#    .env.production - Production defaults (this template)
#    .env - Shared across all environments
